<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.minicapstone.HomeFragment"
    tools:ignore="WebViewLayout">

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, [Username]"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="386dp"
        android:layout_height="288dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/textWelcome"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLayoutVideo">

        <WebView
            android:id="@+id/webViewVideoFeed"
            android:layout_width="384dp"
            android:layout_height="288dp"
            android:layout_below="@+id/textWelcome"
            android:background="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/textElapsedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutVideo"
        android:layout_marginTop="30dp"
        android:text="Elapsed Time: 00:12:57"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>