<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:orientation="vertical"
    tools:context="com.example.minicapstone.LoginFragment">

    <ImageButton
        android:id="@+id/imgBtnLoginBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:background="#00FAFAFA"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow_orange" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textLoginPosture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_rounded_bold_21016"
            android:text="PostureFit"
            android:textColor="@color/orangeCustom3"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textHelloThere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLoginPosture"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:text="@string/hello_there"
            android:textColor="#252422"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textWelcomeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textHelloThere"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:text="@string/welcome_back"
            android:textColor="#252422"
            android:textSize="26dp" />

        <EditText
            android:id="@+id/editLoginEmail"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textWelcomeBack"
            android:layout_marginTop="100dp"
            android:drawableStart="@drawable/custom_email_icon"
            android:drawablePadding="18dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:hint="@string/email_edit_hint_login"
            android:maxLength="30"
            android:paddingBottom="25dp"
            android:textColor="#403D39"
            android:textColorHint="#AAAAAA"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editLoginPassword"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editLoginEmail"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="18dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:hint="@string/password_edit_hint_login"
            android:inputType="textPassword"
            android:maxLength="45"
            android:paddingBottom="25dp"
            android:textColor="#403D39"
            android:textColorHint="#AAAAAA"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editLoginPassword"
            android:layout_alignRight="@+id/editLoginPassword"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/gotham_rounded_medium_21022"
            android:text=""
            android:textColor="@color/orangeCustom4"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textForgotPassword"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/gotham_rounded_medium_21022"
            android:text="@string/login_button"
            android:textAllCaps="false"
            android:textColor="#FFFCF2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:text="@string/no_account"
            android:textColor="#403D39" />

        <Button
            android:id="@+id/btnGoToSignUp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/btnLogin"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textHaveAccount"
            android:background="@null"
            android:fontFamily="@font/gotham_rounded_bold_21016"
            android:text="@string/go_to_signup_button"
            android:textAllCaps="false"
            android:textColor="@color/orangeCustom3" />

    </RelativeLayout>

    <!--
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FAFAFA"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back_arrow_orange"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:background="#00FAFAFA"
                android:adjustViewBounds="true"/>

        </RelativeLayout>
        -->

</LinearLayout>