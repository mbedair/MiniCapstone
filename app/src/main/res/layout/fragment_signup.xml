<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:orientation="vertical"
    tools:context="com.example.minicapstone.SignupFragment">

    <ImageButton
        android:id="@+id/imgBtnSignUpBack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:background="#00FAFAFA"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow_orange" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham_rounded_bold_21016"
            android:text="@string/sign_up"
            android:textColor="@color/orangeCustom3"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/textCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textSignUp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:text="@string/create_new_account"
            android:textColor="#252422"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editSignUpEmail"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCreateAccount"
            android:layout_marginTop="80dp"
            android:drawableStart="@drawable/custom_email_icon"
            android:drawablePadding="18dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:hint="@string/email_edit_hint_signup"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-_@."
            android:maxLength="30"
            android:paddingBottom="25dp"
            android:textColor="#403D39"
            android:textColorHint="#AAAAAA"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSignUpPassword"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editSignUpEmail"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="18dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:hint="@string/password_edit_hint_signup"
            android:inputType="textPassword"
            android:maxLength="45"
            android:paddingBottom="25dp"
            android:textColor="#403D39"
            android:textColorHint="#AAAAAA"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editSignUpConfirmPassword"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editSignUpPassword"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/custom_lock_icon"
            android:drawablePadding="18dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:hint="@string/confirm_password_edit_hint_signup"
            android:inputType="textPassword"
            android:maxLength="45"
            android:paddingBottom="25dp"
            android:textColor="#403D39"
            android:textColorHint="#AAAAAA"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editSignUpConfirmPassword"
            android:layout_marginTop="70dp"
            android:background="@drawable/button_orange"
            android:fontFamily="@font/gotham_rounded_medium_21022"
            android:text="@string/signup_button"
            android:textAllCaps="false"
            android:textColor="#FFFCF2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSignUp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gotham_rounded_book_21018"
            android:text="@string/have_account"
            android:textColor="#403D39" />

        <Button
            android:id="@+id/btnGoToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSignUp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/textHaveAccount"
            android:layout_alignBaseline="@+id/textHaveAccount"
            android:background="#00FFFFFF"
            android:fontFamily="@font/gotham_rounded_bold_21016"
            android:text="@string/go_to_login_button"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:textColor="@color/orangeCustom3" />

    </RelativeLayout>

</LinearLayout>